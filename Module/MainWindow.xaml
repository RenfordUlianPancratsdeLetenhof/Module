        <Label x:Name="label" Content="Кількість ківі" HorizontalAlignment="Left" Margin="25,52,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Кількість качок" HorizontalAlignment="Left" Margin="25,87,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Кількість пінгвінів" HorizontalAlignment="Left" Margin="25,119,0,0" VerticalAlignment="Top"/>

